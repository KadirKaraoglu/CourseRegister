      "typeVersion": 1,
      "position": [450, 300]
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "CALL reserve_spot(:group_id, :email, :full_name, :phone, :registration_id);",
        "additionalFields": {}
      },
      "id": "reserve_spot",
      "name": "Reserve Spot",
