      "type": "n8n-nodes-base.postgres",
      "typeVersion": 1,
      "position": [650, 400]
    },
    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "={{$node.webhook.json}}",
        "options": {}
      },
      "id": "response",
      "name": "Response",
      "type": "n8n-nodes-base.respond-to-webhook",
      "typeVersion": 1,
      "position": [850, 300]
    }
